<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/textPatientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Name"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textAppointmentNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AppointmentNumber"
        android:textColor="@color/purple"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textPatientEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Email" />

    <TextView
        android:id="@+id/textPatientPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Phone Number" />
    <TextView
        android:id="@+id/textPatientGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Gender" />

    <TextView
        android:id="@+id/textPatientAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Age" />


    <TextView
        android:id="@+id/textFormattedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Formatted Time" />
    <TextView
        android:id="@+id/textStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status" />

</LinearLayout>
