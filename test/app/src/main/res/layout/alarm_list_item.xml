<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/doctorName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor Name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/medicationInstructions1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medication Instructions" />

    <TextView
        android:id="@+id/numberOfDays1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Days" />

    <TextView
        android:id="@+id/breakfastTime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breakfast Time" />

    <TextView
        android:id="@+id/lunchTime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lunch Time" />

    <TextView
        android:id="@+id/dinnerTime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dinner Time" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AlarmOff"
        android:layout_gravity="center"
        android:text="Alarm off"
        android:backgroundTint="@color/purple">
    </Button>
</LinearLayout>

