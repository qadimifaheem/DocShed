<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Step22.Doctor.CDoctorHome.CPatientDetailsAppointment.PatientDetailsActivity">




    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_background"
        android:elevation="8dp"
        android:layout_gravity="top"
        app:titleTextColor="@color/purple"
        android:paddingTop="15dp"
        app:titleTextAppearance="@style/ToolbarTitleText"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
    </Space>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_gravity="fill"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp"
        app:cardElevation="20dp"
        app:cardMaxElevation="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:paddingLeft="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:text="Patient details"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>


            <ImageView
                android:id="@+id/patientImageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/custom_edittext" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Picture"
                android:gravity="center">
            </TextView>

            <ListView
                android:id="@+id/patientDetailsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:listSelector="@color/white"
                android:background="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical Records"
                android:gravity="center">
            </TextView>
            <LinearLayout
                android:id="@+id/medicalRecordsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center">
            </LinearLayout>
            <TextView
                android:id="@+id/previousVisitsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Loading visit information..."
                android:layout_marginTop="8dp"
                />

            <Button
                android:id="@+id/previousVisitsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicine Details" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10">

    </Space>
</androidx.appcompat.widget.LinearLayoutCompat>
